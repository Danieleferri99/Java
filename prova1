import java.util.ArrayList;
import java.util.Scanner;
public class Esercizi {
    
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        ArrayList<Double> guadagni = new ArrayList<>();
        int counter = 0;
    
        System.out.println("inserisci l'ID del venditore: ");
        int venditore = scanner.nextInt();
        System.out.println("inserisci i giorni di vendita: ");
        int giorni = scanner.nextInt();
        for (int i = 0; i < giorni; i++){
            System.out.printf("inserisci il guadagno del giorno %d: \n", i + 1);
            double guadagno = scanner.nextDouble();
            guadagni.add(guadagno);
        }
        
        System.out.println("guadagni per giorno: ");
        for (int i = 0; i < guadagni.size();i++){
            System.out.printf("giorno %d guadagno: %.2f$\n", i + 1, guadagni.get(i));
        }

      
    
    }
        
}
 
